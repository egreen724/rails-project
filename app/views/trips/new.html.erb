<h2> Log a Trip </h2>

<%= form_for @trip, url: '/trips', method: :post do |f| %>
<br>
  <%= f.label :activity %>
  <%= f.collection_select :activity_id, Activity.all, :id, :name %> <br>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <br>
  <br>
  Would you like to add this activity to your To Do List or Log a Trip? <br>
  <%= f.select :taken, [["To Do List", false], ["Log a Trip", true]]%>
  <br>
  <br>
  Complete these fields only if you are logging a trip: <br>
    <%= f.label :date, "Date:" %>
    <%= f.date_field :date %> <br>
    <%= f.label :time_ellapsed, "Time (in minutes)" %>
    <%= f.text_field :time_ellapsed %> <br>
    <%= f.label :comment, "User Comments" %>
    <%= f.text_field :comment %> <br>

    <%= f.submit "Submit" %>
  <% end %>
    <br>
    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
