<h2> Edit Your Profile </h2>

<%= form_for @user, method: :put do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %> <br>
  <%= f.label :age, 'Age' %>
  <%= f.text_field :age %> <br>
  <%= f.label :bio, 'Bio' %>
  <%= f.text_field :bio %> <br>
  
  <%= f.submit "Edit Profile" %>
<% end %>
