<h1> Log In </h1>

<div class="form">
<%= form_for :user, url: '/signin', method: :post do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :password %>
  <%= f.password_field :password, id: 'password' %> <br>
  <%= f.submit "Sign In" %>
<% end %>
</div>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <%= link_to "Sign Up with your Google Account", '/auth/google_oauth2', class: 'button'  %>
